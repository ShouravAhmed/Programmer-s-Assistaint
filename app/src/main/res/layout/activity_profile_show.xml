<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileShow"
    android:orientation="vertical"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Dear Programmer!"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:src="@drawable/icon_camera"
            android:layout_centerHorizontal="true"
            app:civ_border_width="2dp"
            app:civ_border_color="#0189ff"/>



        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />


    </RelativeLayout>



    <TextView
        android:id="@+id/textViewDisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UpdateUserName"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewVerified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verified Account"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Problem Solve Data:"
        android:textAlignment="center"
        android:textSize="10dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewCf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CodeForces:"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewUva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UVa: "
        android:textColor="@color/colorBlack"
        android:textSize="25dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewLoj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LightOj: "
        android:textColor="@color/colorBlack"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">



        <Button
            android:id="@+id/buttonUpdateData"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_blue_button"
            android:layout_marginTop="10dp"
            android:text="Update Data"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/buttonUpdateProfile"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_blue_button"
            android:text="Update Profile"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"/>
        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/buttonAllSolveActivity"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_blue_button"
            android:text="All Solve"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"/>


        <Button
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"

            android:background="@drawable/rounded_blue_button"
            android:text="Log Out"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>



    </LinearLayout>

    </LinearLayout>

</ScrollView>