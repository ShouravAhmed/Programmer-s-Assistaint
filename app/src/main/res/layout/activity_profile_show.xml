<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileShow"
    android:orientation="vertical"
    android:background="@color/colorPrimary">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Dear Programmer!"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:background="@drawable/icon_camera"
            android:scaleType="centerCrop" />



        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />


    </RelativeLayout>



    <TextView
        android:id="@+id/textViewDisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UpdateUserName"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textViewVerified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verified Account"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Problem Solve Data:"
        android:textAlignment="center"
        android:textSize="10dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewCf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CodeForces:"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewUva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UVa: "
        android:textColor="@color/colorBlack"
        android:textSize="25dp"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/textViewLoj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LightOj: "
        android:textColor="@color/colorBlack"
        android:textSize="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/buttonUpdateData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="0dp"
            android:text="Update\nData"
            android:background="@drawable/rounded_button_transparent"/>

        <Button

            android:id="@+id/buttonUpdateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="9dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="102dp"
            android:layout_marginRight="102dp"
            android:layout_toEndOf="@+id/buttonUpdateData"
            android:layout_toRightOf="@+id/buttonUpdateData"
            android:text="Update Profile"
            android:background="@drawable/rounded_button_transparent"/>

        <Button
            android:id="@+id/logOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="7dp"
            android:text="Log Out"
            android:background="@drawable/rounded_button_transparent"/>

    </RelativeLayout>


</LinearLayout>